<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="home.css">
    <title>To-Do app</title>
</head>
<body>
    <div class="date-div"> <marquee behavior="" direction=""><h1><%=date%></h1></marquee> </div>
    <div class="form-div">
      <form action="/" method="post" class="form-data">
        <input type="text" name="task" placeholder="Task Name..."> <br> <br>
        <input type="text" name="subTask" placeholder="Write subTask"><br>
        <button>Add To-do</button>
    </form>
    </div >
    <ul class="item-div">
        <% data.forEach(function(item){ %>
          <li>
              <h1><%= item.task %>
                 <a class="btn" href="<%= `/item/${item._id}` %>"
                onclick="return confirm('Are you sure you want to delete this record?')">Delete
              </a>
            </h1>
              
              <span> <%= item.subTask %></span>
              
                
              
          </li>
        <% })%>
      </ul>
</body>
</html>